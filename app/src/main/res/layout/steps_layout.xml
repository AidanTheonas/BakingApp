<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_steps"
    style="@style/width_match_height_wrap"
    android:layout_margin="@dimen/bakes_list_8dp_margin">

    <RelativeLayout style="@style/width_match_height_wrap">

        <ImageView
            android:id="@+id/thumbnail_icon"
            android:contentDescription="@string/step_thumbnail"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_no_video_placeholder"
            android:scaleType="fitXY"
            style="@style/width_match_height_wrap"/>

        <TextView
            android:id="@+id/tv_right_desc_title"
            style="@style/tv_right_desc_title"
            tools:text="Description title" />

        <TextView
            android:id="@+id/tv_step_desc"
            style="@style/tv_step_desc"
            tools:text="Description text here" />
    </RelativeLayout>

</android.support.v7.widget.CardView>